<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender with colors and beautiful formatting -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%-5level}{ERROR=red bold, WARN=yellow bold, INFO=green, DEBUG=cyan, TRACE=blue} %style{[%t]}{magenta} %style{%c{1.}}{bright blue} - %msg%n"/>
        </Console>

        <!-- Alternative pattern without colors (for environments that don't support ANSI) -->
        <Console name="ConsoleNoColor" target="SYSTEM_OUT">
            <PatternLayout pattern="ðŸ“… %d{yyyy-MM-dd HH:mm:ss.SSS} â”‚ %-5level â”‚ ðŸ§µ %-15.15t â”‚ ðŸ“¦ %-30.30c{1.} â”‚ %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Your library's logger -->
        <Logger name="dev.kuku" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Keep third-party libraries quieter -->
        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.springframework" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>